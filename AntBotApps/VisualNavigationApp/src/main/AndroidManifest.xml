<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="insectsrobotics.visualnavigationapp" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="insectsrobotics.visualnavigationapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="insectsrobotics.visualnavigationapp.BackgroundService"
            android:process=":remote">
            <intent-filter>
                <action android:name="insectsrobotics.visualnavigationapp.VisualNavigationBackgroundServiceIntent"/>
            </intent-filter>
        </service>
    </application>

</manifest>
